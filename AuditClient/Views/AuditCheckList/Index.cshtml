@model AuditClient.Models.AuditRequest

@{
    ViewData["Title"] = "Index";
}
    <html>
    <head>

        <style>
            .required::after {
                content: "*";
                font-weight: bold;
                color: red;
            }
        </style>
    </head>
    <body>
        <hr />
        <div class="container">
            <div class="row">
                <h6 class="text-danger">@ViewBag.error</h6>
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Project Details</h5>
                            <h6 class="text-danger">@ViewBag.error</h6>

                            <form asp-action="Index" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ProjectName" class="control-label required"></label>
                                    <input asp-for="ProjectName" class="form-control" />

                                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProjectManagerName" class="control-label required"></label>
                                    <input asp-for="ProjectManagerName" class="form-control" />
                                    <span asp-validation-for="ProjectManagerName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ApplicationOwnerName" class="control-label required"></label>
                                    <input asp-for="ApplicationOwnerName" class="form-control" />
                                    <span asp-validation-for="ApplicationOwnerName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AuditDetail.AuditDate" class="control-label required"></label>
                                    <input asp-for="AuditDetail.AuditDate" class="form-control" />
                                    <span asp-validation-for="AuditDetail.AuditDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AuditDetail.AuditType" class="control-label required"></label>
                                    <select asp-for="AuditDetail.AuditType" class="custom-select">
                                        <option value="">Choose AuditType</option>
                                        <option value="Internal">Internal</option>
                                        <option value="SOX">SOX</option>
                                    </select>

                                    <span asp-validation-for="AuditDetail.AuditType" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<input type="submit" value="Submit" class="btn btn-primary" />*@
                                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>

